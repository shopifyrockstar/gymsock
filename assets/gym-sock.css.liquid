    line-height: 15px;
}
.template-product .size_chart {
  position: relative;
}
.zmdi-ruler:before {
  content: '\f1bb';
  transform: rotate(90deg);
  position: absolute;
  top: 5px;
  left: 0;
}
.items_var variant-radios legend,
.template-product .size_chart span {
  font-size: 16px;
  font-family: 'Latinotype_Trenda_Bold';
  text-transform: none;
}

.block-foundation-series {
    margin: 40px 0 40px 0;
}
h3.bfs-title {
    font-size: 22px;
    font-family: 'Latinotype_Trenda_Heavy';
}
.bfs-desc {
  font-size: 16px;
}

/* FAQs page */
.faqPageWrapper summary {
  font-family: 'Latinotype_Trenda_Heavy';
  font-size: 22px;
  padding: 1rem 1rem 1rem 3rem;
  margin-bottom: 10px;
  outline: none;
  border-radius: 0.25rem;
  text-align: left;
  cursor: pointer;
  position: relative;
  color: #1a1a1a;
}
.faqPageWrapper .faq__content {
  padding: 1rem 1rem 1rem 3rem;
  font-family: 'Latinotype_Trenda_Regular';
  font-weight: 500;
  font-size: 18px;
  color: #1a1a1a;
}
.faqPageWrapper .faq__content p {
  margin-bottom: 20px;
}
.faqPageWrapper details > summary::after {
  font-family: 'Latinotype_Trenda_Regular';
  font-size: 2em;
  position: absolute;
  content: "\2039";
  left: 0;
  transform: rotate(270deg);
  top: -7px;
}
.faqPageWrapper details[open] > summary::after {
  font-family: 'Latinotype_Trenda_Regular';
  font-size: 2em;
  position: absolute;
  content: "\2039";
  transform: rotate(90deg);
  left: 5px;
  top: -7px;
}
.faqPageWrapper details > summary::-webkit-details-marker {
  display: none;
}

.faqPageWrapper details[open] summary ~ * {
  animation: sweep .5s ease-in-out;
}
@keyframes sweep {
  0%    {opacity: 0; margin-top: -10px}
  100%  {opacity: 1; margin-top: 0px}
}


