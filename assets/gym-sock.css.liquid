}

/* Product Page */
.block-product-features .bpf-item {
  display: flex;
  justify-content: start;
  align-items: center;
  margin: 2em 0;
}
.bpf-img-wrapper {
    margin-right: 12px;
}
.bpf-img-wrapper img {
    width: 60px;
    max-width: 60px;
}
.bpf-title {
    font-weight: 600;
  	font-size: 16px;
}
.bpf-desc {
